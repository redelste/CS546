<!-- Page Content -->
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">
      <h1 class="fontApplication colorPlease mainTitle">Don't</h1>
      <h1 class="fontApplication colorPlease mainTitle">Let Me</h1>
      <h1 class="fontApplication colorPlease mainTitle">Die</h1>
      <h3 class="fontApplication colorPlease"> By LemonSuperb</h3>
      <div class="card buttonWidth">
        <div class="card-header" id="headingOne">
          <h5 class="mb-0">
            <button class="btn btn-link fontApplication colorBlack btn-hover" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              Log In
            </button>
          </h5>
        </div>
        <div class="collapse buttonWidth" id="collapseOne" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            <form name="form1" id="form1" action ="/main" method="post">
            <div class="form-group">
              <label for="email">Email address</label>
              <!--USERNAME == EMAIL -->
              <input name="loginEmail" type="username" class="form-control" id="Email" placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <!-- TITLE FOR PASSWORD -->
              <label for="password">Password</label>
              <!-- PASSWORD INPUT -->
              <input name="password" type="password" class="form-control" id="newPassWord" placeholder="Password">
              <!-- Assurance Message -->
              <small id="emailHelp" class="form-text text-muted">We'll never share your password with anyone else either.</small>
            </div>
            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
              <div class="btn-group mr-2" role="group" aria-label="First group">
                <!-- SUBMIT BUTTON -->
                <button type="submit" form="form1" class="btn btn-secondary">Submit</button>
              </div>
              <div class="btn-group" role="group" aria-label="Second Button">
                <!-- NEW USER BUTTON -->
                <button type="submit" formaction="/new_user" formmethod="post" class="btn btn-secondary">New User</button>
              </div>
            </div>
            <p class="fontApplication colorRed"> {{err}} </p>
          </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <!-- White space: TO BE FILLED WITH IDLE VISUALS UNTIL LOGIN  -->
    </div>
  </div>
</div>
<script src="js/three.min.js"></script>
<script src="js/app.js"></script>
<script src="js/WebVR.js"></script>

<script>

    var loader = new THREE.FileLoader();
    loader.load( 'spinning_background.json', function ( text ) {

      var player = new APP.Player();
      player.load( JSON.parse( text ) );
      player.setSize( window.innerWidth, window.innerHeight );
      player.play();

      document.body.appendChild( player.dom );

      window.addEventListener( 'resize', function () {
        player.setSize( window.innerWidth, window.innerHeight );
      } );

    } );

</script>
